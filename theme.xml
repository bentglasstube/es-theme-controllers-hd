<theme>
  <hideHeader />
  <hideDividers />
  <listLeftAlign />

  <listPrimaryColor>ffffff</listPrimaryColor>
  <listSelectorColor>$color</listSelectorColor>
  <listFont>
    <path>./../art/terminus.ttf</path>
    <size>0.04</size>
  </listFont>

  <descColor>ffffff</descColor>
  <descriptionFont>
    <path>./../art/terminus.ttf</path>
    <size>0.04</size>
  </descriptionFont>

  <menuScrollSound>./../sounds/scroll.wav</menuScrollSound>
  <menuSelectSound>./../sounds/select.wav</menuSelectSound>
  <menuBackSound>./../sounds/back.wav</menuBackSound>
  <menuOpenSound>./../sounds/open.wav</menuOpenSound>

  <gameImagePos>$infoWidth/2 0.18</gameImagePos>
  <gameImageDim>$infoWidth 0</gameImageDim>
  <gameImageOrigin>0.5 0</gameImageOrigin>

  <component>
    <type>image</type>
    <path>./bg.png</path>
    <pos>0 0</pos>
    <dim>0 0</dim>
  </component>
</theme>

